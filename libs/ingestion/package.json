{
  "name": "@yagokoro/ingestion",
  "version": "3.0.0",
  "private": true,
  "description": "Paper ingestion service for YAGOKORO - arXiv and Semantic Scholar integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@yagokoro/domain": "workspace:*",
    "axios": "^1.7.9",
    "fast-xml-parser": "^4.5.1",
    "node-cron": "^3.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "vitest": "^2.1.8"
  },
  "keywords": ["ingestion", "arxiv", "semantic-scholar", "paper", "pipeline"]
}

{
  "name": "@yagokoro/neo4j",
  "version": "0.1.0",
  "private": true,
  "description": "Neo4j repository implementation for YAGOKORO GraphRAG system",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run --exclude='**/*.integration.test.ts'",
    "test:integration": "vitest run --include='**/*.integration.test.ts'",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@yagokoro/domain": "workspace:*",
    "neo4j-driver": "^5.27.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@testcontainers/neo4j": "^10.18.0",
    "@types/uuid": "^11.0.0",
    "testcontainers": "^10.18.0",
    "vitest": "^2.1.8"
  },
  "keywords": ["neo4j", "graph-database", "repository"]
}
